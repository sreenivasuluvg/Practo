<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/navigation_dashboard1"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp">

        <TextView
            android:id="@+id/add_dash"
            android:layout_width="354dp"
            android:layout_height="61dp"
            android:paddingLeft="10dp"
            android:text=" Add More Details so we can Customise Your Practo Experience"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


    <TextView
        android:textSize="18dp"
        android:layout_gravity="end"
       android:id="@+id/details_dashboard"
        android:text="ADD DETAILS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>

    <TextView
        android:id="@+id/reading_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Personalise Your Reading Experince"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/interst_dashboard"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:textStyle="bold"
        android:text="ADD INTERSTS"></TextView>

    <TextView
        android:id="@+id/diss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="swipe to dismiss card"
        android:textSize="14dp"
       android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/refer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Refer And save money on medicine order"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/share"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:textStyle="bold"
        android:text="SHARE CODE"></TextView>

    <TextView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="swipe to dismiss card"
        android:textSize="14dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:textStyle="bold"></TextView>

</LinearLayout>
</ScrollView>